/* pages/order/order.wxss */
@import "../common/login/login.wxss";
.ordermainbox{
  padding: 0 5%;
  box-sizing: border-box;
  text-align: center;
}
.goodsbox{
  border-bottom: 1px dashed #eee;
  padding: 30rpx 0 30rpx 168rpx;
  text-align: left;
  position: relative;
}
.t1{
  font-size: 40rpx;
  color: #000;
  padding: 20rpx 0;
  margin-top: 20rpx;
  text-align: left;
}
.t2{
  font-size: 34rpx;
  color: #000;
  padding: 10rpx 0;
}
.t3{
  font-size: 22rpx;
  color: #adadad;
  /* vertical-align:-4rpx; */
}
.goodsimg{
  display: inline-block;
  width: 138rpx;
  height: 138rpx;
  border-radius: 15rpx;
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -69rpx;
}
.radio {
    display: block;
    text-align: left;
    padding: 28rpx 80rpx 28rpx 185rpx;
    position: relative;
    border: 1px solid #eee;
    margin-top: 24rpx;
    border-radius: 8rpx;
}

.ra{
  position: absolute;
  right: 50rpx;
  top: 50%;
  margin-top: -31rpx;
  width: 30rpx;
  height: 30rpx;
}
.radioChecked{
  border: 1px solid #ffc000;
}
.couponvalue{
  display: inline-block;
  position: absolute;
  left: 25rpx;
  top: 50%;
  margin-top: -31rpx;
  font-size: 45rpx;
  color: #ffc000;
  font-weight: bold;
}
.couponvalue text{
  font-size: 24rpx;
  font-weight: normal;
}
.date{
  font-size: 22rpx;
  color: #adadad;
  padding-left: 10rpx;
  /* vertical-align:-4rpx; */
}
.gopaybox{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  display: box;
  display: -webkit-box;
  border-top: 1px solid #eee;
  background: #fff;
}
.child1{
  flex: 1;
  width: 45%;
  text-align: center;
  font-size: 32rpx;
  color: #ffc000;
  line-height: 110rpx;
}
.child2{
  flex: 1;
  width: 55%;
  text-align: center;
  font-size: 32rpx;
  background: #ffc000;
  color: #fff;
  line-height: 110rpx;
}
.nothingcoupons{
  font-size: 32rpx;
  color: #888;
  padding: 50rpx 0;
  text-align: center;
}
.orderprice{
  font-size: 32rpx;
  color: #ffc000;
  padding-top: 10rpx;
}
.buytipstxt{
  font-size: 32rpx;
  color: #999;
  padding: 50rpx 15rpx;
  text-align: center;
  box-sizing: border-box;
}