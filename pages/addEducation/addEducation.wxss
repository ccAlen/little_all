/* pages/addEducation/addEducation.wxss */
.monitextarea{
  height: 300rpx;
  font-size:26rpx;
  color:#777;
  line-height:45rpx;
}
.addbanimg{
  display: block;
  width: 100%;
  height: 105rpx;
}
.addTitle{
  font-size: 26rpx;
  color: #99a4a8;
  padding: 22rpx 5%;
  box-sizing: border-box;
  background: #f3f6f7;
}
.addModule{
  padding: 0 5%;
  box-sizing: border-box;
  background: #fff;
}
.addList{
  display: box;
  display: -webkit-box;
  border-bottom: 1px solid #e5e5e5;
}
.al_child{
  box-flex:1;
  -webkit-box-flex: 1;
}
.alc1{
  width: 20%;
  text-align: left;
  font-size: 30rpx;
  color: #000;
  padding: 40rpx 0;
}
.alc2{
  width: 80%;
  text-align: right;
  font-size: 30rpx;
  color: #000;
  padding: 35rpx 0;
}
.addListbox{
  position: relative;
}
.addListbox:last-child .addList{
  border-bottom: 0;
}
.selectBox{
  position: absolute;
  top:120rpx;
  right:0%;
  background: #f3f6f7;
  width: 60%;
  border-radius: 15rpx;
  z-index: 9;
  max-height:500rpx;
  overflow-y:scroll;
  -webkit-overflow-scrolling: touch;
}
.selectList{
  padding: 35rpx 5%;
  box-sizing: border-box;
  font-size: 30rpx;
  color: #666;
  border-bottom: 1px solid #e5e5e5;
}
.selectList:last-child{
  border-bottom: 0;
}
.describe{
  padding: 40rpx 5% 0;
  box-sizing: border-box;
  background: #fff;
}
.describeList{
  font-size: 26rpx;
  color: #777;
  line-height: 45rpx;
}
.tips{
  font-size: 24rpx;
  padding: 35rpx 0;
  color: #ffc000;
  border-top: 1px solid #e5e5e5;
  margin-top: 40rpx;
}
.btnbox{
  background: #f3f6f7;
  padding: 30rpx 5%;
  box-sizing: border-box;
}
.keepbtn{
  background: #ffc000;
  color: #fff;
  text-align: center;
  border-radius: 12rpx;
  /* padding: 30rpx 0; */
}