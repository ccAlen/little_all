/* pages/common/login/login.wxss */
.loginBoom{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 99;
  background: rgba(0, 0, 0, 0.75)
}
.shadowbox{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display:-moz-box;
  -moz-box-pack:center;
  -moz-box-align:center;
  display:-webkit-box;
  -webkit-box-pack:center;
  -webkit-box-align:center;
  display:box;
  box-pack:center;
  box-align:center;
}
.mainbox{
  width: 88%;
  background: #fff;
  border-radius: 10rpx;
  text-align: center;
}
.txt{
  font-size: 32rpx;
  color: #999;
  padding: 0 15rpx 50rpx;
  text-align: center;
  box-sizing: border-box;
}
.txt1{
  font-size: 38rpx;
  padding: 50rpx 0 20rpx;
  text-align: center;
  color: #000;
}
.btnbox{
  display: box;
  display: -webkit-box;
  border-top: 1px solid #e0e0e0;
}
.btn_child{
  background: none;
  display: block;
  border: 0;
  box-flex:1;
  -webkit-box-flex: 1;
  width: 50%;
  font-size: 32rpx;
  text-align: center;
  padding: 20rpx 0;
  color: #333;
  border-top: 1px solid #e0e0e0;
}
.sure{
  color: #ffc000 !important;
  border-left: 1px solid #e0e0e0 !important;
}
.boomimg{
  display: inline-block;
  width: 600rpx;
  height: 821rpx;
}
.mainbox1{
  position: relative;
  text-align: center;
}
.getbtn{
  display: block;
  width: 100%;
  height: 168rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}