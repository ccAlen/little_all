.radiocontent{
  display: box;
  display: -webkit-box;
  position: fixed;
  bottom: 12%;
  right: 5%;
  width: 200rpx;
  height: 75rpx;
  background: #fff;
  border-radius: 100rpx;
  border: 2rpx solid #ffc000;
  z-index: 10;
  box-shadow:0rpx 2px 35px -10px #ffc000;
}
.rLeft{
  box-flex:1;
  -webkit-box-flex: 1;
  width: 40%;
  display: -webkit-flex;
display: flex;
-webkit-align-items: center;
align-items: center;
-webkit-justify-content: center;
justify-content: center;
}
.teacherimg{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: inline-block;
}
.play{
  background: url("data:image/png;base64,") no-repeat;
}
.pause{
  background: url("data:image/png;base64,") no-repeat;
}
.rCenter{
