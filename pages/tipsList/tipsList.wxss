/* pages/tipsList/tipsList.wxss */
.tipsName{
  font-size: 34rpx;
  color: #222;
  padding: 0 150rpx 0 0;
  position: relative;
  overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.tipsContent{
  padding: 0 5%;
  box-sizing: border-box;
}
.tipsList{
  border-bottom: 1px solid #ececec;
  padding: 20rpx 0;
}
.tipstime{
  font-size: 22rpx;
  color: #ccc;
  position: absolute;
  right: 0;
  top: 10rpx;
}
.tipsTxt{
  font-size: 25rpx;
  margin: 20rpx 0;
  color: #999;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow:ellipsis;
  -white-space: nowrap;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp:2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  width: 100%; 
  position: relative;
}
.eddView{
  font-size: 26rpx;
  color: #999;
  padding: 45rpx 0;
  text-align: center;
}
.nothing{
  font-size: 34rpx;
  color: #666;
  padding: 30rpx 5%;
  box-sizing: border-box;
}